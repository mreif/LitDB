<!DOCTYPE html>
<html>
<head>
  <title>LiteraturDB - <%= yield(:title) %></title>
  	<%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
</head>
<body>
	<div id="container">
		<nav id ="box_menu">
			<div id="menu">
				<ul>
				    <li> <a href="/publications">Publications</a></li>
				    <li> <a href="/authors">Authors</a> </li>
				    <% if user_signed_in?%>
				   		<li> <%= link_to "Logout",   destroy_user_session_path, :method => :delete %> </li>
				    <% else %>
				    	<li> <a href="/users/sign_in">Login</a> </li>
					<% end %>
				</ul>
				<% if  current_page?(root_path) || request.path.match(/\/authors\/\d+/) != nil %>
					<div id="search">
						<input id="srch" type="text" value="" autofocus="true" size="45"/>
					</div>
				<% end %>
			</div>
		</nav>
		<div id="content" class="content">
			<h1> <%= yield(:title) %></h1>
      		<%= yield %>
		</div>
		<div id="footer">
			
		</div>
	</div>
</body>
</html>
